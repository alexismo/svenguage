<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexismorin.linguage.se.sv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LinguageTheme" >
        <activity
            android:name="com.alexismorin.linguage.DrawerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alexismorin.linguage.FirstLaunchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.alexismorin.linguage.se.sv.SwedenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_sweden"
            android:screenOrientation="portrait"
            android:theme="@style/LinguageTheme" >
        </activity>
        <activity
            android:name="com.alexismorin.linguage.se.sv.InterviewActivity"
            android:label="@string/title_activity_interview"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.alexismorin.linguage.laps.LAPs"
            android:label="@string/title_activity_LAPs"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.alexismorin.linguage.VocabularyActivity"
            android:label="@string/title_activity_vocabulary"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alexismorin.linguage.DrawerActivity" />
        </activity>
        <activity
            android:name="com.alexismorin.linguage.se.sv.VideoActivity"
            android:label="@string/title_activity_video" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alexismorin.linguage.DrawerActivity" />
        </activity>
    </application>

</manifest>