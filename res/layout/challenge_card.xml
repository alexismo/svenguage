<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/list_padding"
    android:paddingBottom="@dimen/list_padding"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:layout_margin="0dp"
    android:background="@color/white" >
    
    <ImageView 
        android:id="@+id/challenge_icon"
        android:layout_height="72dp"
        android:layout_width="72dp"
        android:scaleType="fitCenter"
        android:src="@drawable/challenge_hand"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
         />
    
    <LinearLayout
        android:id="@+id/challenge_card_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">
        
        <TextView android:id="@+id/challenge_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="@string/menu_placeholder"
            style="@style/textAppearanceLargeLight" />
        
        <TextView android:id="@+id/challenge_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="@string/menu_placeholder"
            style="@style/textAppearanceMediumLightGrey" />
        
    </LinearLayout>
    

</LinearLayout>