<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/list_padding"
    android:paddingBottom="@dimen/list_padding"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/white" >
    
    <ImageView 
        android:layout_height="96dp"
        android:layout_width="96dp"
        android:src="@drawable/challenge_hand" />
    
    <LinearLayout
        android:id="@+id/challenge_card_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView android:id="@+id/challenge_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="Greetings in Swedish" />
        
        <TextView android:id="@+id/challenge_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="(Hälsningar på svenska)" />
        
    </LinearLayout>
    

</LinearLayout>