<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@drawable/paper_texture"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/source_language_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:text="@string/menu_placeholder"
        android:textAppearance="@style/textAppearanceLargeRegular" />

    <TextView
        android:id="@+id/translation_language_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/menu_placeholder"
        android:textAppearance="@style/textAppearanceLargeLight" />

    <ImageButton
        android:id="@+id/speak_button"
        style="@style/svenguageCircleBlueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:contentDescription="@string/dummy_button"
        android:padding="@dimen/activity_vertical_margin" />

</LinearLayout>