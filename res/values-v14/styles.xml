<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="FranguageTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/FRActionBar</item>
    </style>
    <style name="SvenguageTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/SVActionBar</item>
    </style>

    <style name="FRActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_texture</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:icon">@drawable/svenguage_logo_long</item>
        <!-- <item name="android:titleTextStyle">@style/VLOActionBar.ButtonTextColor</item> -->
    </style>
    
    <style name="SVActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_texture</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:icon">@drawable/svenguage_logo_long</item>
        <!-- <item name="android:titleTextStyle">@style/VLOActionBar.ButtonTextColor</item> -->
    </style>
    
    <style name="textAppearanceLargeBlue" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/swedenBlue</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="textAppearanceLargeLight" parent="android:TextAppearance.Large">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/svenguageGrey</item>
    </style>
    
    <style name="textAppearanceLargeRegular" parent="android:TextAppearance.Large">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/svenguageGrey</item>
    </style>
    
    <style name="textAppearanceMediumLightGrey" parent="android:TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/svenguageLightGrey</item>
    </style>
    
    <style name="textAppearanceMediumRegular" parent="android:TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/svenguageGrey</item>
    </style>
    
    <style name="textAppearanceSmallLightGrey" parent="android:TextAppearance.Small">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/svenguageLightGrey</item>
    </style>
    
    <!-- Button Styles -->
    <style name="svenguageBlueButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/blue_button_states</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="svenguageGreyButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/grey_button_states</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="svenguageCircleBlueButton">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:src">@drawable/speaker</item>
    </style>
    
</resources>